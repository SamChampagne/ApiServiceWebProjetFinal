    "components":{"schemas":{
        "utilisateur": {
            "type": "object",
            "required": [
                "nom",
                "prenom",
                "email",
                "motdepasse",
                "cle_api"
            ],
            "properties": {
                "nom": {
                    "type": "string"
                },
                "prenom": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "motdepasse": {
                    "type": "string"
                },
                "cle_api": {
                    "type": "string"
                }
            }
        },
    "tache" : {
        "type": "object",
        "required": [
            "user_id",
            "titre",
            "description",
            "date_debut",
            "date_echeance",
            "complete"
        ],
        "properties": {
            "user_id": {
                "type": "integer",
                "format": "int32",
                "minimum": 0
            },
            "titre": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "date_debut": {
                "type": "string"
            },
            "date_echeance": {
                "type": "string"
            },
            "complete": {
                "type": "integer",
                "format": "int32",
                "maximum": 1,
                "minimum": 0
            }
        }
    }
