        "/api/utilisateur/token": {
            "put": {
                "description": "Génère une nouvelle clé API pour l'utilisateur",
                "summary": "Obtention de clé API",
                "tags": ["utilisateur"],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Informations de l'utilisateur (email et mot de passe)",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "format": "email"
                                },
